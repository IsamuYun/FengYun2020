// give.c
#include <ansi.h>
inherit F_CLEAN_UP;

int do_give(object me, object obj, object who);
void create() { seteuid(getuid()); }

int main(object me, string arg)
{
	string target, item;
            object obj, who, *inv, obj2;
        string no_accept;
        int i, amount;
	if(!arg) return notify_fail("你要给谁什麽东西？\n");

	if( sscanf(arg, "%s to %s", item, target)==2
	|| sscanf(arg, "%s %s", target, item)==2 );
	else return notify_fail("你要给谁什麽东西？\n");

	if(!objectp(who = present(target, environment(me))) || !living(who))
		return notify_fail("这里没有这个人。\n");
        if (interactive(me) && stringp(no_accept = who->query("env/no_accept")))
        {
                if ((no_accept == "all" || no_accept == "ALL" ||
                     me->query("id")==who->query("env/no_accept")) )
                {
                        return notify_fail("人家现在不想要你的东西！！\n");
                }
        }

	if(sscanf(item, "%d %s", amount, item)==2) {
		if( !objectp(obj = present(item, me)) )	
			return notify_fail("你身上没有这样东西。\n");
		if( obj->query("no_drop") ||obj->query_temp("no_drop"))
			return notify_fail("这样东西不能随便给人。\n");
 
                if( !obj->query_amount() )      
			return notify_fail( obj->name() + "不能被分开给人。\n");
		if( amount < 1 )
			return notify_fail("东西的数量至少是一个。\n");
		if( amount > obj->query_amount() ) 
			return notify_fail("你没有那麽多的" + obj->name() + "。\n");
		else if( amount == (int)obj->query_amount() )
			return do_give(me, obj, who);
		else {
			obj->set_amount( (int)obj->query_amount() - amount );
			obj2 = new(base_name(obj));
			obj2->set_amount(amount);
     if(!do_give(me,obj2,who))
obj->set_amount( (int)obj->query_amount() + amount );
return 1;
}
	}


	if(arg=="all") {
		inv = all_inventory(me);
		for(i=0; i<sizeof(inv); i++) {
			do_give(me, inv[i], who);
		}
		write("Ok.\n");
		return 1;
	}

	if(!objectp(obj = present(item, me)))
		return notify_fail("你身上没有这样东西。\n");
	return do_give(me, obj, who);
}

int do_give(object me, object obj, object who)
{
	if( obj->query("no_drop") )
		return notify_fail("这样东西不能随便给人。\n");
// check for dynamic_quests
        if(obj->query("dynamic_quest"))
        if(TASK_D->quest_reward(me,who,obj))
        return 1;
	if( !interactive(who) && !who->accept_object(me, obj) )
		return notify_fail("你只能把东西送给其他玩家操纵的人物。\n");

      if( !userp(who) && !who->query("can_carry")&& who->query("id")!="tie" ) {
		tell_object(me,"你拿出" + obj->short() + "给" + who->name()+"。\n");
		destruct(obj);
		return 1;
	} else if( obj->move(who) ) {
		printf("你给%s一%s%s。\n", who->name(), obj->query("unit"),
			obj->name());
		message("vision", sprintf("%s给你一%s%s。\n", me->name(),
			obj->query("unit"), obj->name()), who );
		message("vision", sprintf("%s给%s一%s%s。\n", me->name(), who->name(),
			obj->query("unit"), obj->name()), environment(me), ({me, who}) );
  	        if (wizardp(me)&&userp(who)){
	        message("channel:chat",HIR"【系统报告】观察天神："+"听说"+who->query("name")+"接受"+me->query("name")+"给予的"+obj->query("name")+HIR"，请大家注意监督。\n"NOR,users());
                     }// Tiandi update no logs
       	  // log_file( "GIVE_LOG", sprintf("(%s) %s give %s(%s) to %s\n", ctime(time()), me->query("id"), obj->query("name"), base_name(obj), who->query("id")));
	return 1;
	}
	else return 0;
}
int help(object me)
{
write(@HELP
指令格式 : give <物品名称> to <某人>
      或 : give <某人> <物品名称>
 
这个指令可以让你将某样物品给别人, 当然, 首先你要拥有这样物品.
 
HELP
    );
    return 1;
}
